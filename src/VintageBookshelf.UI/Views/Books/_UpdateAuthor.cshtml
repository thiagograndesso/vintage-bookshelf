@model VintageBookshelf.UI.ViewModels.BookViewModel
@{
    ViewData["Title"] = "Update Author";
}

<div class="modal-header">
    <h4 class="modal-title">@ViewData["Title"]</h4>
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">x</span>
        <span class="sr-only">Fechar</span>
    </button>
</div>

<form asp-action="UpdateAuthor" >
    <div class="modal-body">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Author.Id"/>
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Author.Name" class="control-label"></label>
            <input asp-for="Author.Name" class="form-control" />
            <span asp-validation-for="Author.Name" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Author.BirthDate" class="control-label"></label>
            <input asp-for="Author.BirthDate" class="form-control" />
            <span asp-validation-for="Author.BirthDate" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Author.Biography" class="control-label"></label>
            <textarea cols="40" rows="5" asp-for="Author.Biography" class="form-control" ></textarea>
            <span asp-validation-for="Author.Biography" class="text-danger"></span>
        </div>

        <div class="modal-footer">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update Author" class="btn btn-success" />
                <input type="button" value="Close" class="btn btn-info" data-dismiss="modal" />
            </div>
        </div>
    </div>
</form>
    
