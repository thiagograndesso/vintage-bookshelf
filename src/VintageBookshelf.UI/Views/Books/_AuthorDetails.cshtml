@model VintageBookshelf.UI.ViewModels.BookViewModel
<div style="padding-top: 20px;">
    <div>
        <hr/>
        <h4>Author</h4>
    </div>
    
    @if (Model != null)
    {
        <table class="table table-hover">
            <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Author.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author.BirthDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author.Biography)
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Author.Name)
                </td>
                <td>
                    @Model.Author.BirthDate.ToString("d")
                </td>
                <td>
                    @Html.DisplayFor(model => model.Author.Biography)
                </td>
            </tr>
            </tbody>
        </table>
    }
</div>